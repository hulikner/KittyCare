    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cat.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Owner.FirstName)
        </dt>
        <dd class = "col-sm-10">
